{
    "name": "zicht/classes",
    "description": "PHP utility for conditionally joining CSS classes.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Zicht Online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "classmap": ["src/Zicht/"]
    },
    "autoload-dev": {
        "classmap": ["tests/Zicht/"]
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": [
            "phpunit -c phpunit.xml.dist"
        ]
    }
}
